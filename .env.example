# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./saas_analytics.db

# OpenAI API Key (required for Niko AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_ENV=production
DEBUG=False

# Authentication (Basic Auth)
# Leave empty to disable authentication (not recommended for production)
AUTH_USERNAME=admin
AUTH_PASSWORD=change_this_password

# SMTP Configuration (optional - required for email notifications)
# Leave empty to disable email features
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=SaaS Analytics

# For production with PostgreSQL, use:
# DATABASE_URL=postgresql+asyncpg://username:password@host:port/database_name
